#include <iostream>
#include <queue>
#include <string>
#include <algorithm>
#include <tuple>
using namespace std;

int N, M;
int a[101][101], visited[101][101];
int dy[] = { -1,0,1,0 }, dx[] = { 0,1,0,-1 };

void BFS(int y, int x) {
    visited[y][x] = 1;
    queue<pair<int, int>> q;
    q.push({ y,x });
    while (q.size()) {
        tie(y, x) = q.front(); q.pop();

        for (int i = 0; i < 4; i++) {
            int ny = y + dy[i];
            int nx = x + dx[i];
            if (ny < 0 || ny >= N || nx < 0 || nx >= M) continue;
            if (a[ny][nx] && visited[ny][nx] == 0) {
                q.push({ ny,nx });
                visited[ny][nx] = visited[y][x] + 1;
            }
        }
    }
    return;
}

int main() {
    cin >> N >> M;
    for (int i = 0; i < N; i++) {
        string s;
        cin >> s;
        for (int j = 0; j < M; j++) {
            a[i][j] = s[j] - '0';
        }
    }
    BFS(0, 0);
    cout << visited[N - 1][M - 1];

    return 0;
}
